<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context=".AddLieuDialog"
    android:id="@+id/addlieu">

    <EditText
        android:id="@+id/locationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="Nom lieu" />
    <EditText
        android:id="@+id/locationDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/locationName"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif"
        android:hint="Description lieu" />

    <Spinner
        android:id="@+id/locationCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/locationDescription"
        android:layout_marginBottom="4dp"
        android:fontFamily="sans-serif"
        android:hint="Categorie lieu" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/labelCheckBoxPartager"
        android:id="@+id/checkBoxShareLocation"
        android:layout_below="@+id/locationCategory"
        android:layout_marginTop="4dp" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addCurrentLoc"
        android:id="@+id/checkBoxAddCurrentLoc"
        android:layout_below="@+id/checkBoxShareLocation"
        android:layout_marginTop="4dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter"
        android:id="@+id/btnAjout"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="33dp"
        android:layout_below="@+id/checkBoxAddCurrentLoc"
         />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Annuler"
        android:id="@+id/btnAnnule"
        android:layout_toEndOf="@+id/btnAjout"
        android:layout_alignTop="@+id/btnAjout"
        />

</RelativeLayout>
