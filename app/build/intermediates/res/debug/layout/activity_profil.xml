<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.manhattanproject.geolocalisation.Activity_profil">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:onClick="gestionFichier"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:maxHeight="150dp"
        android:minHeight="150dp"
        android:maxWidth="100dp"
        android:minWidth="100dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Pseudo"
        android:ems="10"
        android:id="@+id/pseudo"
        android:layout_alignLeft="@+id/mdp"
        android:layout_alignStart="@+id/mdp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Password"
        android:id="@+id/mdp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="67dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Appliquer"
        android:id="@+id/btnapp"
        android:layout_below="@+id/SpinnerDuree"
        android:layout_marginTop="30dp"
        android:onClick="appliquerModif"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="33dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifier"
        android:onClick="modif"
        android:id="@+id/btnmod"
        android:layout_toEndOf="@+id/btnapp"
        android:layout_alignTop="@+id/btnapp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="Statut"
        android:id="@+id/Statut"
        android:layout_below="@+id/mdp"
        android:layout_marginTop="50dp"
        android:layout_alignParentLeft="true"
        android:maxHeight="180dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <CheckBox
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text=" Partager\n ma position"
    android:id="@+id/checkBoxPartagePos"
    android:layout_below="@+id/Statut"
    android:layout_alignLeft="@+id/btnapp"
    android:layout_marginTop="100dp" />

    <Spinner
        android:id="@+id/SpinnerDuree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/checkBoxPartagePos"
        android:layout_marginBottom="4dp"
        android:fontFamily="sans-serif"
        android:hint="mins"
        android:layout_alignLeft="@+id/btnmod"
        android:layout_alignEnd="@+id/btnmod" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:text="minutes\n"
        android:layout_alignBottom="@+id/SpinnerDuree"
        android:layout_toRightOf="@+id/SpinnerDuree" />
</RelativeLayout>
