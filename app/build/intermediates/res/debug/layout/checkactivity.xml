<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Envoyer"
            android:background="@drawable/buttons"
            android:onClick="send"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/annuler"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/envoyer" />

        <Button
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Annuler"
            android:onClick="retour"
            android:layout_marginLeft="10dp"
            android:id="@+id/annuler"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/buttons"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tout cocher"
            android:id="@+id/all"
            android:onClick="allSelect"
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@+id/envoyer"
            android:layout_toRightOf="@+id/envoyer"/>

    </RelativeLayout>


    <ListView android:id="@android:id/list"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        />

</LinearLayout><!-- From: file:/home/kilosakeyrocker/AndroidStudioProjects/Geolocalisation/app/src/main/res/layout/checkactivity.xml -->